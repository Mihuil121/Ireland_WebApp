# .gitattributes

# TypeScript
*.ts linguist-detectable=true linguist-language=TypeScript
*.tsx linguist-detectable=true linguist-language=TypeScript

# JavaScript  
*.js linguist-detectable=true linguist-language=JavaScript
*.jsx linguist-detectable=true linguist-language=JavaScript

# Styles
*.scss linguist-detectable=true
*.css linguist-detectable=true

# Ignore generated files
.next/** linguist-generated=true
out/** linguist-generated=true
build/** linguist-generated=true

# Ignore vendor files
node_modules/** linguist-vendored=true

# Ignore media and assets (they shouldn't affect language stats)
*.mp4 linguist-vendored=true
*.mkv linguist-vendored=true
*.svg linguist-vendored=true
*.png linguist-vendored=true
*.jpg linguist-vendored=true
*.jpeg linguist-vendored=true
*.gif linguist-vendored=true
*.ico linguist-vendored=true
*.webp linguist-vendored=true

# Mark public folder as vendored (static assets)
public/** linguist-vendored=true